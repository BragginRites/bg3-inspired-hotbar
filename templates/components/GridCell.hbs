<div>
    {{#if icon}}
        <img src="{{icon}}" alt="{{name}}" class="hotbar-item{{#if (eq uses.value 0)}} depleted{{/if}}" draggable="false">
        <div class="hotbar-item-name">{{name}}</div>
        {{#if uses}}<div class="hotbar-item-uses{{#if (eq uses.value 0)}} depleted{{/if}}">{{uses.value}}/{{uses.max}}</div>{{/if}}
    {{else}}
        <div>{{name}}</div>
    {{/if}}
</div>