<div>
    {{#each buttons}}
        <div class="menu-item" data-key="{{@key}}">
            <div class="menu-item-content" data-tooltip="{{tooltip}}" style="{{style}}">
                {{!-- <span class="ability-label{{#if mod.prof}} proficient{{/if}}">{{label}}</span>
                <span class="ability-value{{#if mod.prof}} proficient{{/if}}">{{mod.value}}</span> --}}
                {{#if label}}<span class="menu-item-label">{{#if icon}}<i class="{{icon}}"></i>{{/if}}{{label}}</span>{{/if}}
                {{#if value}}<span class="menu-item-value">{{value}}</span>{{/if}}
                {{#if special}}<span class="menu-item-special">{{{special}}}</span>{{/if}}
            </div>
        </div>
    {{/each}}
</div>